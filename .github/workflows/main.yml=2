name: Compile Rules

on:
  push:
    branches:
      - main
    paths:
      - 'custom_direct.json'  # 仅当 custom_direct.json 文件发生变化时触发
  workflow_dispatch:  # 允许手动触发

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: write

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Download and install sing-box
      run: |
        echo "Downloading sing-box..."
        curl -Lo sing-box.tar.gz https://github.com/SagerNet/sing-box/releases/download/v1.12.0/sing-box-1.12.0-linux-amd64.tar.gz
        echo "Installing sing-box..."
        tar -xzf sing-box.tar.gz
        chmod +x sing-box-1.12.0-linux-amd64/sing-box
        sudo mv sing-box-1.12.0-linux-amd64/sing-box /usr/local/bin/sing-box
        echo "sing-box version: $(sing-box version)"

    - name: Check if custom_direct.json exists
      id: config_exists
      run: |
        if [ -f "custom_direct.json" ]; then
          echo "custom_direct_exists=true" >> "$GITHUB_OUTPUT"
        else
          echo "custom_direct_exists=false" >> "$GITHUB_OUTPUT"
        fi

    - name: Compile Sing-Box Rules
      if: steps.config_exists.outputs.custom_direct_exists == 'true'
      run: |
        echo "Compiling custom_direct.json to custom_direct.srs..."
        sing-box rule-set compile custom_direct.json --output custom_direct.srs
        if [ ! -f custom_direct.srs ]; then
          echo "Error: custom_direct.srs file was not generated."
          exit 1
        else
          echo "custom_direct.srs file generated successfully."
          cat custom_direct.srs  # 输出文件内容以确认生成成功
        fi

    - name: Set up GitHub credentials
      if: steps.config_exists.outputs.custom_direct_exists == 'true'
      run: |
        git config --local user.email "3436707227@qq.com"
        git config --local user.name "yjtuuige"
        git remote set-url origin https://x-access-token:${{ secrets.GITHUB_TOKEN }}@github.com/${{ github.repository }}.git

    - name: Commit and push compiled rules
      if: steps.config_exists.outputs.custom_direct_exists == 'true'
      run: |
        echo "Adding custom_direct.srs to git..."
        git add custom_direct.srs
        echo "Checking git status..."
        git status  # 输出 git 状态以确认文件已添加到暂存区
        if git diff --cached --quiet; then
          echo "No changes to commit"
        else
          echo "Committing changes..."
          git commit -m "Compiled rules"
          echo "Pushing changes..."
          git push
        fi
